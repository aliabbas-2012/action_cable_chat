<legend>Chat</legend>
<div class="row">
  <div class="col-md-4">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">New Message</h3>
      </div>
      <div class="panel-body">
        <%= simple_form_for Message.new, html:{class: 'form-horizontal',onSubmit: "javascript:App.room.send_message()"},url:'javascript:void(0)',remote: true do |f| %>
            <div class='form-group'>
              <div class="col-xs-4 ">

                <%= f.input_field :user,placeholder: 'Enter Username',class: 'form-control' %>
              </div>
            </div>
            <div class='form-group'>

              <div class="col-xs-10">
                <%= f.input_field :content,as: :string,placeholder: 'Enter Message',class: 'form-control' %>
              </div>
            </div>

            <%= f.button :button, 'sent Message',class: "btn btn-block btn-primary send_message" %>
        <% end %>
      </div>

    </div>
  </div>
  <div class="col-md-8">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Messages</h3>
      </div>
      <ul class="list-group messages">
        <%= render @messages %>
      </ul>

    </div>
  </div>

</div>